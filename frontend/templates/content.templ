package templates

templ Content(isLoggedIn bool) {
	<div class="bg-white p-6 rounded-lg shadow-md">
		if isLoggedIn {
			<h2 class="text-2xl font-bold mb-4">Content Area</h2>
			<p class="text-gray-700">Please select a option from the menu on the left side.</p>
		} else {
			<h2 class="text-2xl font-bold mb-4">Not logged in</h2>
			<p class="text-gray-700">Please log in or register to use the application.</p>
		}
	</div>
}
